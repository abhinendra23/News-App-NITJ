<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:padding="15dp"
    android:background="@drawable/profile_bk"
    tools:context=".PlacementInput">

    <Button
        android:id="@+id/button"
        style="@style/signoutbuttonstyle"
        android:layout_width="140dp"
        android:layout_height="50dp"
        android:layout_marginTop="40dp"
        android:paddingRight="25dp"
        android:text="submit"
        android:textColor="@android:color/black"
        android:textSize="17sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/placement_input_desc" />

    <EditText
        android:id="@+id/placement_input_package"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:ems="10"
        android:hint="Enter Package"
        android:inputType="textPersonName"
        android:padding="15dp"
        android:textColorHint="@android:color/black"
        app:layout_constraintTop_toBottomOf="@+id/placement_input_company"
        tools:layout_editor_absoluteX="98dp" />

    <EditText
        android:id="@+id/placement_input_desc"
        android:layout_width="match_parent"
        android:layout_height="198dp"
        android:layout_marginTop="25dp"
        android:ems="10"
        android:hint="Enter Placed Student Details"
        android:inputType="textPersonName"
        android:textColor="@android:color/black"
        android:textColorHint="@android:color/black"
        app:layout_constraintTop_toBottomOf="@+id/placement_input_package"
        tools:layout_editor_absoluteX="7dp" />

    <EditText
        android:id="@+id/placement_input_company"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="52dp"
        android:ems="10"
        android:hint="Enter Company"
        android:inputType="textPersonName"
        android:padding="15dp"
        android:textColor="@android:color/black"
        android:textColorHint="@android:color/black"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="0dp" />
</androidx.constraintlayout.widget.ConstraintLayout>