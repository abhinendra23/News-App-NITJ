<?xml version="1.0" encoding="UTF-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent" android:layout_width="match_parent">

    <RelativeLayout tools:context=".SubmitPostActivity" android:layout_height="match_parent" android:layout_width="match_parent">

    <EditText android:layout_height="70dp" android:layout_width="match_parent" android:textSize="18dp" android:textColorHint="@android:color/black" android:textColor="@android:color/black" android:padding="10dp" android:inputType="text|textMultiLine" android:hint="Title" android:background="@drawable/borders" android:layout_marginTop="30dp" android:id="@+id/PostTitle"/>

    <EditText android:layout_height="317dp" android:layout_width="match_parent" android:textSize="15dp" android:textColorHint="@android:color/black" android:textColor="@android:color/black" android:inputType="text|textMultiLine" android:hint="Description" android:background="@drawable/borders" android:layout_marginTop="15dp" android:id="@+id/PostDescription" android:layout_marginEnd="0dp" android:layout_alignEnd="@+id/PostTitle" android:layout_below="@+id/PostTitle"/>

        <Button
            android:id="@+id/ImageButton"
            android:layout_width="138dp"
            android:layout_height="59dp"
            android:layout_below="@+id/PostDescription"
            android:layout_alignEnd="@+id/PostDescription"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="163dp"
            android:onClick="set_image"
            android:text="Add Photo"
            android:textSize="15dp" />

        <Button
            android:id="@+id/Submit"
            android:layout_width="253dp"
            android:layout_height="64dp"
            android:layout_below="@+id/ImageButton"
            android:layout_alignEnd="@+id/PostDescription"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="109dp"
            android:layout_marginBottom="483dp"
            android:onClick="set_image_util"
            android:text="Submit"
            android:textSize="18dp" />

        <ImageView
            android:id="@+id/Image"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_below="@+id/Submit"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="-400dp"
            android:layout_marginEnd="135dp"
            app:srcCompat="@drawable/background" />

    </RelativeLayout>

</ScrollView>